<br>
<% if !@retweet.nil?%>
  
    <p>
        <strong>Title:</strong>
        <%= @retweet.title %>
    </p>

    <p>
        <strong>Content:</strong>
        <%= @retweet.content %>
    </p>

    <p><%= @retweet.likes.count %> <%= (@retweet.likes.count) == 1 ? 'Like' : 'Likes'%></p>
    <p><%= @retweet.retweets.count %> <%= (@retweet.retweets.count) == 1 ? 'Retweet' : 'Retweets'%></p>
    <p>
        <strong>Autor:</strong>
        <%= @retweet.user.name %>
    </p>
    <p>
        <%=image_tag"#{@retweet.user.picture}", style: 'height:300px; width:300px;'%> 
    </p>
    <p><%= time_ago_in_words(@retweet.created_at) %></p>
<%end%>
<p>
  <strong>Título:</strong>
  <%= @tweet.title %>
</p>

<p>
  <strong>Tweet:</strong>
  <%= @tweet.content %>
</p>


<% pre_like = @tweet.likes.find { |like| like.user_id == current_user.id} %>
<% if pre_like %>
  <%= link_to raw('&#x1F494;'), tweet_like_path(@tweet, pre_like), method: :delete %>
<% else %>
  <%= link_to raw('&#x1F495;'), tweet_likes_path(@tweet), method: :post %>
  
<% end %>

<p><%= @tweet.likes.count %> <%= (@tweet.likes.count) == 1 ? 'Like' : 'Likes'%></p>
<% @tweet.likes.each do |tweet| %>
            <tr>
                <td><%=image_tag"#{tweet.user.picture}", style: 'height:100px; width:100px;'%></td>
            </tr>
<%end%>
<br>

<%= link_to 'Retweet', new_tweet_path(@tweet), method: :post %> 

<p><%= @tweet.retweets.count %> <%= (@tweet.retweets.count) == 1 ? 'Retweet' : 'Retweets'%></p>
<p>
  <strong>Autor:</strong>
  <%= @tweet.user.name %>
</p>

<p><%= time_ago_in_words(@tweet.created_at) %></p> <hr>

<% if @tweet.user == current_user %>
    <%= link_to 'Editar', edit_tweet_path(@tweet) %> <hr>
<%end%>
<%= link_to 'Atrás', tweets_path %>
