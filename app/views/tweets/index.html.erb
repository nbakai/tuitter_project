
<h1>Tweets</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.title %></td>
        <td><%= tweet.content %></td>
        <td><%= tweet.user_id %></td>
        <td><%= link_to 'Mostrar', tweet %></td>
        <% if user_signed_in? && tweet.user_id == current_user.id%>
          <td><%= link_to 'Editar', edit_tweet_path(tweet) %></td>
          <td><%= link_to 'Borrar', tweet, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %></td>  
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

