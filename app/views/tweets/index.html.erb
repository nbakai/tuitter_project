
<h1>Twitter</h1>
<% if user_signed_in?%>
  <%= form_with(model: @tweet, local: true) do |form| %>

      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title %>
      </div>

      <div class="field">
        <%= form.label :content %>
        <%= form.text_area :content %>
      </div>


      <div class="actions">
        <%= form.submit %>
      </div>
  <% end %>
<%end%>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Contenido</th>
      <th>Usuario</th>
      <th>Foto</th>
      <th>Likes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.title %></td>
        <td><%= tweet.content %></td>
        <td><%= tweet.user.name if tweet.user %></td>
        <td><%=image_tag"#{tweet.user.picture}", style: 'height:75px; width:75px;'%> </td>
        <td><%= tweet.likes.count %> <%= (tweet.likes.count) == 1 ? 'Like' : 'Likes'%></td>
        <td><%= link_to 'Mostrar', tweet %></td>
        <% if user_signed_in? && tweet.user_id == current_user.id%>
          <td><%= link_to 'Editar', edit_tweet_path(tweet) %></td>
          <td><%= link_to 'Borrar', tweet, method: :delete, data: { confirm: 'Estás seguro?' } %></td>  
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="row">
  <div class="col-md-8 offset-md-2">
    
    <%= link_to_next_page @tweets, 'Mostrar más tweets >>' %>
  </div>
</div>
<br>
<%= link_to 'Nuevo Tweet', new_tweet_path %>
