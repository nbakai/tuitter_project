<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section >
   
      <h1><%= @user.name %></h1>
    
      <span><b>Tweets:</b> <%= @user.tweets.count %></span> <br>
      <span><b>Likes:</b> <%= @user.likes.count %> <%= (@user.likes.count) == 1 ? 'Like' : 'Likes'%></span>
    </section>
   
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
  </div>
</div>



<% if @user != current_user %>
  <div>
    <%# if current_user.following%>
      <%#=  render 'unfollow', user_id: @user.id %>
    <%# else %>
    <%= render 'follow', user_id: @user%>
    <%# end %>
  </div>
<% end %>





<div >
    <strong> 
      <%= @user.following.count%>
    </strong>
    following

 
    <strong> 
      <%= @user.followers.count %>
    </strong>
    followers

</div>

<%= link_to 'Inicio', tweets_path %>
